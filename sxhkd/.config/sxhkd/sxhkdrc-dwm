super + Escape
    pkill -USR1 -x sxhkd; \
    notify-send "sxhkd restarted"

{_, ctrl +} Print
    name="$(date +%s).png"; \
    file="~/Pictures/screenshots/$name"; \
    maim {_,-s} $file; \
    xclip -selection clipboard -t image/png; < $file; \
    notify-send "Screenshot Taken" "Screenshot $name saved to clipboard"

super + space
    rofi -show drun

super + Return
    st -e tmux

super + shift + l
    lockscreen.sh

# Command mode
super + d ; c
    dmenu_run

super + d ; s
    $HOME/Scripts/switch_keyboard_layout.sh

super + d ; i
    $HOME/Scripts/switch_clash.sh

super + d ; l
    $HOME/Scripts/switch_screenlayout.sh

